<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/content_detail"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.kimbshkorp.moviesapp.DetailActivityFragment"
    android:focusable="true"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_detail"
        tools:text="Spirited Away"
        android:textStyle="bold"
        android:textSize="24dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView

        android:focusableInTouchMode="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/posteer_detail"
        tools:src="@drawable/ic_info_black_24dp"

        />

    <LinearLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_detail"
        tools:text="10-10-2014"
        android:textStyle="normal|bold"
        android:layout_marginBottom="8dp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating_title"
            tools:text="8.3/10"
            android:textStyle="normal|bold"
            android:layout_marginBottom="8dp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fav_icon"
        android:src="@drawable/ic_favorite_border_black_24dp"
        android:layout_marginLeft="8dp"
        />
</LinearLayout>


    </LinearLayout>
</LinearLayout>

    <TextView
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plot_detail"
        tools:text="sdkfksjdhfksjdhfksjdhfksjdhfksjdhfksjdhfksjdhfkshd"
        android:textStyle="normal|bold"
        />
    <GridView

        android:id="@+id/trailer_list"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:numColumns="2"
        android:columnWidth="400dp"
        android:layout_margin="8dp"
        />

    <ListView

        android:focusable="false"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/review_list"/>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>